{
  "name": "doppelpunkt",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint --max-warnings=0 .",
    "prettier": "prettier --write .",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test:ci --passWithNoTests",
    "preserve": "bun run build",
    "serve": "firebase emulators:start",
    "deploy": "firebase deploy"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@types/bun": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,d.ts}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "packages/**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
