{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "tsc && vite build",
    "preview": "bunx --bun vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "bun test",
    "test:ci": "CI=true bun test",
    "deploy": "firebase deploy --only hosting"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/semi": [
            "error",
            "never"
          ]
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@floating-ui/react": "^0.27.16",
    "@reduxjs/toolkit": "^2.9.0",
    "debug": "^4.4.3",
    "diff-match-patch": "^1.0.5",
    "firebase": "^12.2.1",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-compiler-runtime": "^19.1.0-rc.1-rc-af1b7da-20250421",
    "react-dom": "^19.1.1",
    "react-hotkeys-hook": "^5.1.0",
    "react-redux": "^9.2.0",
    "react-simple-code-editor": "^0.14.1",
    "reading-time-estimator": "^1.14.0",
    "vite-plugin-checker": "^0.9.3",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.12.0",
    "@eslint/compat": "^1.3.2",
    "@happy-dom/global-registrator": "^17.6.3",
    "@ladle/react": "^5.0.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.22",
    "@types/diff-match-patch": "^1.0.36",
    "@types/prismjs": "^1.26.5",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.1-rc-af1b7da-20250421",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.6"
  }
}
